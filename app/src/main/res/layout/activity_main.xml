<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DBMS"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/dbmsEditTxt"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        tools:text="DBMS" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/javaEditTxt"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:text="Java" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iOS"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/iosEditTxt"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="@+id/textView"
        tools:text="iOS" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/androidEditTxt"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        tools:text="Android" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swift"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/swiftEditTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Swift" />

    <EditText
        android:id="@+id/swiftEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Marks Of Swift"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/iosEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Marks Of iOS"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/swiftEditTxt"
        app:layout_constraintStart_toStartOf="@+id/swiftEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/swiftEditTxt" />

    <EditText
        android:id="@+id/javaEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Marks Of Java"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/iosEditTxt"
        app:layout_constraintStart_toStartOf="@+id/iosEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/iosEditTxt" />

    <EditText
        android:id="@+id/androidEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Marks Of Android"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/javaEditTxt"
        app:layout_constraintStart_toStartOf="@+id/javaEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/javaEditTxt" />

    <EditText
        android:id="@+id/dbmsEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Marks Of DBMS"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/androidEditTxt"
        app:layout_constraintStart_toStartOf="@+id/androidEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/androidEditTxt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dbmsEditTxt" >

        <Button
            android:id="@+id/calculateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:text="Calculate"
            tools:text="Calculate" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>